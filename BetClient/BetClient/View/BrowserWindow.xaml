<controls:MetroWindow x:Class="BetClient.View.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:add="clr-namespace:BetClient.Add"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowTransitionsEnabled="False"
                      Icon="Image/main.png" 
        Title="Сделать ставки" Height="600" Width="900" MinHeight="300" MinWidth="400" TitleCaps="False" WindowStartupLocation="CenterScreen">
    <controls:MetroWindow.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF7C7C7C" Offset="1"/>
        </LinearGradientBrush>
    </controls:MetroWindow.BorderBrush>
    <controls:MetroWindow.WindowTitleBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF6A6A6A" Offset="0"/>
            <GradientStop Color="#FF807E7E" Offset="1"/>
            <GradientStop Color="#FF3A3939" Offset="0.477"/>
        </LinearGradientBrush>
    </controls:MetroWindow.WindowTitleBrush>
    <controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Grid Width="{TemplateBinding Width}"
                 Height="{TemplateBinding Height}"
                 Margin="6"
                 Background="Transparent"
                 RenderOptions.EdgeMode="Aliased"
                 RenderOptions.BitmapScalingMode="HighQuality">
                <Image Source="Image/main.png"></Image>
            </Grid>
        </DataTemplate>
    </controls:MetroWindow.IconTemplate>
    <Grid Name="CommonGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="ToolBarGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFBDC1C3" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Grid.Background>
            <ToolBar>
                <Button Content="Настройки" Height="25" VerticalAlignment="Top" Width="95"/>
                <Button Content="Калькулятор" Height="25" VerticalAlignment="Top" Width="75" Command="{Binding CalcCommand}"/>
            </ToolBar>
        </Grid>
        <Grid Name="BrowsersGrid" Grid.Row="1" >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFBDC1C3" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Name="Browser1Grid"   Grid.Row="0">
                <WebBrowser Name="Browser1" add:WebBrowserUtility.BindableSource="{Binding BrowserModel.Site1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Margin="60,15,15, 34">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Navigated">
                            <i:InvokeCommandAction Command="{Binding Path=NavigationCommand1}" CommandParameter="{Binding ElementName=Browser1}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LoadCompleted">
                            <i:InvokeCommandAction Command="{Binding Path=LoadedCommand1}" CommandParameter="{Binding ElementName=Browser1}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </WebBrowser>
                <Button  Name="ButtonBack1" Height="5" Width="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="90, 0, 0, 4" Command="{Binding BackCommand1}" CommandParameter="{Binding ElementName=Browser1}">
                    <Button.Content>
                        <Image Source="Image/back.png"></Image>
                    </Button.Content>
                </Button>
                <Button Name="ButtonForward1" Height="5" Width="25"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120, 0, 0, 4" Command="{Binding ForwardCommand1}" CommandParameter="{Binding ElementName=Browser1}">
                    <Button.Content>
                        <Image Source="Image/forward.png"></Image>
                    </Button.Content>
                </Button>
                <Button Name="ButtonUpdate1" Height="5" Width="25"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="150, 0, 0, 4" Command="{Binding RefreshCommand1}" CommandParameter="{Binding ElementName=Browser1}">
                    <Button.Content>
                        <Image Source="Image/refresh.png"></Image>
                    </Button.Content>
                </Button>
                <TextBox  Width="500"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="180, 0, 0, 3" Text="{Binding BrowserModel.Text1, Mode=TwoWay}" IsReadOnly="True"/>
            </Grid>
            <Grid Name="GridSeparator" Grid.Row="1" Background="Gray">
            </Grid>
            <Grid Name="Browser2Grid" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="361*"/>
                    <ColumnDefinition Width="531*"/>
                </Grid.ColumnDefinitions>
                <WebBrowser  Name="Browser2" add:WebBrowserUtility.BindableSource="{Binding BrowserModel.Site2}"  Margin="60,15,15, 34" Grid.ColumnSpan="2">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Navigated">
                            <i:InvokeCommandAction Command="{Binding Path=NavigationCommand2}" CommandParameter="{Binding ElementName=Browser2}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LoadCompleted">
                            <i:InvokeCommandAction Command="{Binding Path=LoadedCommand2}" CommandParameter="{Binding ElementName=Browser2}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </WebBrowser>
                <Button Name="ButtonBack2" Height="5" Width="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="90, 0, 0, 4" Command="{Binding BackCommand2}" CommandParameter="{Binding ElementName=Browser2}">
                    <Button.Content>
                        <Image Source="Image/back.png"></Image>
                    </Button.Content>
                </Button>
                <Button Name="ButtonForward2" Height="5" Width="25"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120, 0, 0, 4" Command="{Binding ForwardCommand2}" CommandParameter="{Binding ElementName=Browser2}">
                    <Button.Content>
                        <Image Source="Image/forward.png"></Image>
                    </Button.Content>
                </Button>
                <Button  Name="ButtonUpdate2" Height="5" Width="25"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="150, 0, 0, 4" Command="{Binding RefreshCommand2}" CommandParameter="{Binding ElementName=Browser2}">
                    <Button.Content>
                        <Image Source="Image/refresh.png"></Image>
                    </Button.Content>
                </Button>
                <TextBox  Width="500"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="180, 0, 0, 3" Text="{Binding BrowserModel.Text2, Mode=TwoWay}" IsReadOnly="True" Grid.ColumnSpan="2"/>
            </Grid>
        </Grid>
    </Grid>
</controls:MetroWindow>
